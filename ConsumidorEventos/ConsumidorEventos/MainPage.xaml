<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConsumidorEventos.MainPage"
             xmlns:views="clr-namespace:ConsumidorEventos.Views"
             BackgroundColor="#B20000">

    <Shell.FlyoutHeader>
        <views:Header />
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Eventos">
        <Tab>
            <ShellContent x:Name="eventsList">
                <views:List />
            </ShellContent>
        </Tab>
    </FlyoutItem>


    <FlyoutItem Title="Sobre">
        <Tab>
            <ShellContent x:Name="about">
                <views:About/>
            </ShellContent>
        </Tab>
    </FlyoutItem>

</Shell>
